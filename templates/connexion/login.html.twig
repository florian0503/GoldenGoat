{% extends 'base.html.twig' %}

{% block title %}Connexion – Golden Goat{% endblock %}

{% block body %}
<div class="login">
  <div class="login__wrapper">
    <h1 class="login__title">Se connecter</h1>

    {% if error %}
      <div class="login__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}" class="login__form">
      <div class="login__group">
        <label for="inputEmail" class="login__label">Email</label>
        <input
          type="email"
          id="inputEmail"
          name="_username"
          value="{{ last_username }}"
          class="login__input"
          placeholder="email@exemple.com"
          required autofocus
        >
      </div>

      <div class="login__group">
        <label for="inputPassword" class="login__label">Mot de passe</label>
        <input
          type="password"
          id="inputPassword"
          name="_password"
          class="login__input"
          placeholder="••••••••"
          required
        >
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button type="submit" class="login__submit">Connexion</button>
    </form>

  <p class="login__help">
    Pas de compte ? 
    <a href="{{ path('app_register') }}" class="login__link">Inscription</a>
  </p>

  </div>
</div>
{% endblock %}
